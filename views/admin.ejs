<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Admin Dashboard</h1>
        <table>
            <tr>
                <th>Username</th>
                <th>Chat ID</th>
                <th>Action</th>
            </tr>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.chat_id || 'Not Set' %></td>
                <td>
                    <form action="/admin/update-chat-id" method="POST">
                        <input type="hidden" name="userId" value="<%= user.id %>">
                        <input type="text" name="chatId" placeholder="Enter chat ID" required>
                        <button type="submit" class="button">Update Chat ID</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </table>
    </div>
</body>
</html>
